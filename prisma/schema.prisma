generator markdown {
  provider = "prisma-markdown"
  output   = "./ERD.md"
  title    = "Poop-backend"
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["views"]
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator kysely {
  provider     = "prisma-kysely"
  output       = "../src/database"
  fileName     = "types.ts"
  enumFileName = "enums.ts"
}

model Breed {
  id        String    @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  createdAt DateTime  @default(now()) @db.Timestamp(6)
  updatedAt DateTime  @default(now()) @updatedAt @db.Timestamp(6)
  deletedAt DateTime? @db.Timestamp(6)
  nameKR    String    @db.VarChar
  nameEN    String?   @db.VarChar
  avatar    String?   @db.VarChar
  profiles  Profile[]

  @@map("breeds")
}

model Profile {
  id        String    @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  createdAt DateTime  @default(now()) @db.Timestamp(6)
  updatedAt DateTime  @default(now()) @updatedAt @db.Timestamp(6)
  deletedAt DateTime? @db.Timestamp(6)
  avatarUrl String?   @db.VarChar
  name      String    @db.VarChar(13)
  birthday  DateTime  @db.Timestamp(6)
  gender    Gender    @default(NONE)
  breedId   String    @db.Uuid
  breed     Breed     @relation(fields: [breedId], references: [id])

  user   User   @relation("profile", fields: [userId], references: [id])
  userId String @db.Uuid
  Toon   Toon[]

  @@unique([name])
  @@index([breedId])
  @@index([userId])
  @@map("profiles")
}

model User {
  id          String        @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  createdAt   DateTime      @default(now()) @db.Timestamp(6)
  updatedAt   DateTime      @default(now()) @updatedAt @db.Timestamp(6)
  deletedAt   DateTime?     @db.Timestamp(6)
  password    String        @db.VarChar
  userId      String        @unique @db.VarChar(100)
  phone       String?       @unique @db.VarChar
  birthday    DateTime?     @db.Date
  verified    DateTime?     @db.Timestamp(6)
  latestToken String?       @db.VarChar
  provider    SocialProvier @default(CREDENTIAL)
  profiles    Profile[]     @relation("profile")

  // 가장 최근 접속한 프로필의 아이디
  latestProfileId String? @unique @db.Uuid

  verification verification? @relation("verification")

  @@map("users")
}

model verification {
  id        String    @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  createdAt DateTime  @default(now()) @db.Timestamp(6)
  updatedAt DateTime  @default(now()) @updatedAt @db.Timestamp(6)
  deletedAt DateTime? @db.Timestamp(6)
  code      String    @db.VarChar

  user   User   @relation("verification", fields: [userId], references: [id])
  userId String @unique @db.Uuid
}

model Toon {
  id        String    @id @default(dbgenerated("uuid_generate_v4()"))
  createdAt DateTime  @default(now()) @db.Timestamp(6)
  updatedAt DateTime  @default(now()) @updatedAt @db.Timestamp(6)
  deletedAt DateTime? @db.Timestamp(6)

  title     String
  toonImage String
  profile   Profile @relation(fields: [profileId], references: [id])
  profileId String  @db.Uuid

  type        ToonType
  challenge   Challenge?    @relation(fields: [challengeId], references: [id])
  challengeId String?
  ToonGraphic ToonGraphic[]

  @@index([profileId])
  @@index([challengeId])
  @@map("toons")
}

model Challenge {
  id        String    @id @default(dbgenerated("uuid_generate_v4()"))
  createdAt DateTime  @default(now()) @db.Timestamp(6)
  updatedAt DateTime  @default(now()) @updatedAt @db.Timestamp(6)
  deletedAt DateTime? @db.Timestamp(6)

  //TODO: 단독 테이블로 관리
  category  String
  thumbnail String
  title     String
  startDate DateTime
  endDate   DateTime
  Toon      Toon[]
}

model ToonGraphic {
  id        String    @id @default(dbgenerated("uuid_generate_v4()"))
  createdAt DateTime  @default(now()) @db.Timestamp(6)
  updatedAt DateTime  @default(now()) @updatedAt @db.Timestamp(6)
  deletedAt DateTime? @db.Timestamp(6)
  toon      Toon      @relation(fields: [toonId], references: [id])
  toonId    String
  graphic   Graphic   @relation(fields: [graphicId], references: [id])
  graphicId String

  // TODO
  // 리소스 트랜스폼 값
  // 리소스 스케일 값
  // 제스쳐 값
  // 사이즈 값
  // 말풍선일 경우, 택스트 내용

  @@index([toonId])
  @@index([graphicId])
  @@map("toon_assets")
}

model Graphic {
  id          String            @id @default(dbgenerated("uuid_generate_v4()"))
  createdAt   DateTime          @default(now()) @db.Timestamp(6)
  updatedAt   DateTime          @default(now()) @updatedAt @db.Timestamp(6)
  deletedAt   DateTime?         @db.Timestamp(6)
  name        String            @unique @db.VarChar
  url         String            @unique @db.VarChar
  type        GraphicType
  category    GraphicsCategory?
  ToonGraphic ToonGraphic[]

  @@map("graphics")
}

enum GraphicsCategory {
  Message
  Sticker
  Challenge
}

enum GraphicType {
  Lottie
  GIF

  @@map("graphics_type")
}

enum Gender {
  MALE
  FEMALE
  NONE
}

enum SocialProvier {
  APPLE
  GOOGLE
  KAKAO
  CREDENTIAL
}

enum ToonType {
  CHALLENGE
  NORMAL
}
